Vagrant.configure("2") do |config|

  # --------------------------
  # MÁQUINA: WEB01
  # --------------------------
  config.vm.define "web01" do |wb|
    wb.vm.box = "ubuntu/jammy64"
    wb.vm.hostname = "web01"
	wb.vm.network "private_network", ip: "192.168.50.10"
	
	#PORT FORWARDING
	wb.vm.network "forwarded_port", guest: 80, host: 8080, auto_correct: true
	
	
	#Provision para instalar NGINX
	wb.vm.provision "shell", path: "install_nginx.sh"
	
	#Carpeta sincronizada
	wb.vm.synced_folder "html", "/var/www/html"
	
	end



  # --------------------------
  # MÁQUINA: DB01
  # --------------------------
  config.vm.define "db01" do |db|
    db.vm.box = "ubuntu/jammy64"
    db.vm.hostname = "db01"
	db.vm.network "private_network", ip: "192.168.50.20"
	
	
	#Carpeta nueva - Provision
	db.vm.provision "shell", path: "datos_backup.sh"
	
	
	# CONFIGURACIÓN RECURSOS HARDWARE
	db.vm.provider "virtualbox" do |vb|
	# # Display the VirtualBox GUI when booting the machine
	# vb.gui = true
	#
	# # Customize the amount of memory on the VM:
	vb.memory = "512"
	vb.cpus = 1
	end
	end

end
